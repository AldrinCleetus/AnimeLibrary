    <link rel="stylesheet" type="text/css" href="/css/main.css">

    <title>Anime Library</title>
</head>
<body>
    <!-- Image and text -->
    

    <header class="section h-100" id="section1">
            
             <nav class="navbar navbar-dark  vh-25">
              <div class="container-fluid py-3">
                <a class="navbar-brand px-2" href="/">
                  <img src="../images/Logo4.svg" style="height:75px">
                </a>
                <a class="btn btn-outline-light rounded btn-lg " href="#">
                    <i class="fa fa-github"></i>
                    Github
                </a>
              </div>
            </nav>




                   

            <div id="main" class=" text-white container-fluid h-100">

                <!-- <h1 class="display-1 text-white text-center"> <%= userInfo %> </h1> -->

                <div class="mx-2 p-2 d-flex justify-content-center align-items-center">


                  
                  <div class=" text-center mx-4 text-centerflex-column p-2 order-3">

                    <% if(userInfo.image_url){ %>
                            <img src="<%= userInfo.image_url %>" class=" img-fluid rounded">
                    <% } %> 

                  
                    <div class="m-2">
                      <h3 class="h3"><%= userInfo.username %></h3>
                    </div>

                  </div>


                  <!-- Except phones it displays on all -->

                  <div class="card text-white bg-primary mx-2 d-none d-sm-block order-1" style="width: 18rem;">
                    <div class="card-header">
                      <h2 class="title">Watching</h2>
                    </div>
                    <div class="card-body text-center ">
                      <h2 class="card-title w-100 h1"><%= userInfo.anime_stats.watching %></h2>
                    </div>
                  </div>

                  <div class="card text-white bg-success mx-2 d-none d-sm-block order-2" style="width: 18rem;">
                    <div class="card-header">
                      <h2 class="title">Completed</h2>
                    </div>
                    <div class="card-body text-center ">
                      <h2 class="card-title w-100 h1"><%= userInfo.anime_stats.completed %></h2>
                    </div>
                  </div>

                  <div class="card text-white bg-warning mx-2 d-none d-sm-block order-4" style="width: 18rem;">
                    <div class="card-header">
                      <h2 class="title">Plan to Watch</h2>
                    </div>
                    <div class="card-body text-center ">
                      <h2 class="card-title w-100 h1"><%= userInfo.anime_stats.plan_to_watch %></h2>
                    </div>
                  </div>

                  <div class="card text-white bg-danger mx-2 d-none d-sm-block order-5" style="width: 18rem;">
                    <div class="card-header">
                      <h2 class="title">Dropped</h2>
                    </div>
                    <div class="card-body text-center ">
                      <h2 class="card-title w-100 h1"><%= userInfo.anime_stats.dropped %></h2>
                    </div>
                  </div>

