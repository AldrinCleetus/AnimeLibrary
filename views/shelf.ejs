<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <!-- <link rel="stylesheet" type="text/css" href="css/main.css"> -->

    <title>Anime Library</title>
</head>
<body>
    <!-- Image and text -->
    

    <header class="section h-100 bg-dark" id="section1">
            
            <nav class="navbar navbar-dark bg-dark vh-25">
              <div class="container-fluid py-3">
                <a class="navbar-brand px-2" href="/">
                  Anime Library!
                </a>
                <a class="btn btn-primary" href="#">GitHub</a>
              </div>
            </nav>


                   

            <div class="container-fluid h-100">

                <h1 class="display-1 text-white text-center"> <%= userInfo %> </h1>

                <div class="container-fluid d-flex py-5 align-content-stretch flex-wrap justify-content-between">

                    <% animeData.forEach(anime =>{ %>
                        <img src=<%= anime.image_url %> class="m-4 rounded img-fluid" width="250" height="300">
                    <% })%>
                </div>
            </div>
            



    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>
</html>