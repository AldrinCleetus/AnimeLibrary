	<!-- Image and text -->
	

	<header class="section vh-100" id="section1">
            
            <nav class="navbar navbar-dark  vh-25">
			  <div class="container-fluid py-3">
			    <a class="navbar-brand px-2" href="/">
			      <img src="images/Logo4.svg" style="height:75px">
			    </a>
			    <a class="btn btn-outline-light rounded-pill btn-lg " href="#">
			    	<i class="fa fa-github"></i>
			    	Github
			    </a>
			  </div>
			</nav>
                   

            <!-- First Section/Landing Page -->
            <div class="jumbotron h-75 m-0 text-white text-center p-2 d-flex align-items-center bg-transparent" id="landingpage">
                <div class="container-fluid w-100">
